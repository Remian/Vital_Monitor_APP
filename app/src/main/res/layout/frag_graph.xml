<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="10"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="5"
            android:layout_margin="7dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/tempHead"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Temperature Data"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:layout_margin="7dp"/>

                <com.github.mikephil.charting.charts.BarChart
                    android:id="@+id/barTempGraph"
                    android:layout_below="@+id/tempHead"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />



            </RelativeLayout>


        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="5"
            android:layout_margin="7dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/rrHead"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Respiration Rate Data"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:layout_margin="7dp"/>

                <com.github.mikephil.charting.charts.BarChart
                    android:id="@+id/barRrGraph"
                    android:layout_below="@+id/rrHead"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />



            </RelativeLayout>


        </androidx.cardview.widget.CardView>

    </LinearLayout>

</layout>